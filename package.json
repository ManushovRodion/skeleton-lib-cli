{
  "name": "skeleton-lib-cli",
  "version": "1.0.0",
  "description": "[RU]Интерфейс командной строки, который инициализирует скелет библиотеки.[EN]Command line interface that invokes skeleton libraries",
  "keywords": [
    "skeleton-lib",
    "skeleton",
    "template",
    "base",
    "lib",
    "library",
    "node",
    "cli",
    "rollup"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/skeleton-lib-cli.common.js",
  "unpkg": "dist/skeleton-lib-cli.umd.js",
  "module": "dist/skeleton-lib-cli.esm.js",
  "types": "dist/skeleton-lib-cli.d.ts",
  "typings": "dist/skeleton-lib-cli.d.ts",
  "bin": {
    "skeleton-lib-cli": "./bin/cli.js"
  },
  "scripts": {
    "build": "rimraf dist && rollup --c rollup.config.ts --configPlugin typescript && rimraf dist/types",
    "lint": "eslint --ignore-path .eslintignore --ext .ts .",
    "lint:format": "prettier --ignore-path .gitignore --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ManushovRodion/skeleton-lib-cli.git"
  },
  "author": "ManushovRodion <rodion-krox@mauil.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ManushovRodion/skeleton-lib-cli/issues"
  },
  "homepage": "https://github.com/ManushovRodion/skeleton-lib-cli#readme",
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-json": "6.0.0",
    "@rollup/plugin-terser": "0.3.0",
    "@rollup/plugin-typescript": "11.0.0",
    "@types/node": "16.18.11",
    "@typescript-eslint/eslint-plugin": "5.48.0",
    "@typescript-eslint/parser": "5.48.0",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "husky": "8.0.3",
    "prettier": "^2.8.2",
    "rimraf": "3.0.2",
    "rollup": "3.9.1",
    "rollup-plugin-dts": "5.1.1",
    "tslib": "2.4.1",
    "typescript": "4.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:format && yarn lint --fix"
    }
  }
}
