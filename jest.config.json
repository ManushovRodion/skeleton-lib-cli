{
  "preset": "ts-jest",
  "testEnvironment": "node",

  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.ts"],

  "restoreMocks": true,
  "verbose": true,

  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": -10
    }
  }
}
