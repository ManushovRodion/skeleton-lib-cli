{
  "preset": "ts-jest",
  "testEnvironment": "node",

  "restoreMocks": true,
  "verbose": true,

  "setupFilesAfterEnv": ["<rootDir>/jest.global.mocks.ts"],
  "modulePathIgnorePatterns": ["/stubs/"],

  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.ts"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": -10
    }
  }
}
